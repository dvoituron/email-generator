@inject IJSRuntime JS

<div id="signature">
    <table style="font-size: 11pt; font-family: Arial, sans-serif; color: black; width: 600px;" width="600" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
                <td width="200" style="width: 200px; vertical-align: top;" valign="top">
                    <a href="https://@Value.UrlCompany" target="_blank">
                        <img border="0" alt="Logo" width="180"
                             style="width: 180px; height:auto; border:0;" src="@Value.GetImageUrl("logo.png")">
                    </a>
                </td>

                <td width="270" style="width: 270px; vertical-align: top; text-align: center;" valign="top" align="center">
                    <table cellpadding="0" cellspacing="0" border="0" width="270">
                        <tr>
                            <td style="font-size: 13pt; font-family: Arial, sans-serif; text-align: center;"><center><strong>@Value.FirstName @Value.LastName</strong></center></td>
                        </tr>
                        <tr>
                            <td style="font-size: 10pt; font-family: Arial, sans-serif; text-align: center;"><center>@Value.Title</center></td>
                        </tr>
                        <tr>
                            <td style="font-size: 10pt; font-family: Arial, sans-serif; text-align: center;">&nbsp;</td>
                        </tr>
                        <tr>
                            <td style="font-size: 10pt; font-family: Arial, sans-serif; text-align: center;">
                                <center>
                                @if (!String.IsNullOrWhiteSpace(Value.Phone))
                                {
                                <a href="tel:@Value.Phone.Replace(" ", "")" style="color: black;" target="_blank"><font color="black">@Value.Phone</font></a>
                                }
                                </center>
                            </td>
                        </tr>
                        <tr>
                            <td style="font-size: 10pt; font-family: Arial, sans-serif; text-align: center;">
                                <center>
                                @if (!String.IsNullOrWhiteSpace(Value.Phone2))
                                {
                                <a href="tel:@Value.Phone2.Replace(" ", "")" style="color: black;" target="_blank"><font color="black">@Value.Phone2</font></a>
                                }
                                </center>
                            </td>
                        </tr>
                        <tr>
                            <td style="font-size: 10pt; font-family: Arial, sans-serif; text-align: center;">&nbsp;</td>
                        </tr>
                        <tr>
                            <td style="font-size: 10pt; font-family: Arial, sans-serif; text-align: center;">
                                <center>
                                @if (!String.IsNullOrWhiteSpace(Value.Citation))
                                {
                                <i>"@Value.Citation"</i>
                                }
                                </center>
                            </td>
                        </tr>
                    </table>
                </td>

                <td width="130" style="width: 130px; vertical-align: top; text-align: center;" valign="top" align="center">
                    <div style="font-size:13pt;"><strong>Follow us</strong></div>
                    <div>&nbsp;</div>
                    <table style="border: 0px;" cellpadding="0" cellspacing="0" border="0" align="center">
                        <tr>
                            @if (!String.IsNullOrWhiteSpace(Value.UrlLinkedin))
                            {
                                <td style="font-family: Arial, sans-serif; ">
                                    <a href="https://@Value.UrlLinkedin" target="_blank" rel="noopener">
                                        <img border="0" width="24" height="24" src="@Value.GetImageUrl("linkedin.png")"
                                             alt="linkedin icon" style="border:0px ; height:24px; width:24px;">
                                    </a>
                                </td>
                            }
                            <td>&nbsp;</td>
                            @if (!String.IsNullOrWhiteSpace(Value.UrlFacebook))
                            {
                                <td style="font-family: Arial, sans-serif; ">
                                    <a href="https://@Value.UrlFacebook" target="_blank" rel="noopener">
                                        <img border="0" width="24" height="24" src="@Value.GetImageUrl("facebook.png")"
                                             alt="facebook icon" style="border:0px ; height:24px; width:24px;">
                                    </a>
                                </td>
                            }
                            <td>&nbsp;</td>
                            @if (!String.IsNullOrWhiteSpace(Value.UrlInstagram))
                            {
                                <td style="font-family: Arial, sans-serif; ">
                                    <a href="https://@Value.UrlInstagram" target="_blank" rel="noopener">
                                        <img border="0" width="24" height="24" src="@Value.GetImageUrl("instagram.png")"
                                             alt="instagram icon" style="border:0px ; height:24px; width:24px;">
                                    </a>
                                </td>
                            }
                        </tr>
                    </table>
                    <div>&nbsp;</div>
                    <div><a href="https://@Value.UrlCompany" target="_blank" rel="noopener" style="color: black;"><font color="black">@Value.UrlCompany</font></a></div>
                </td>

            </tr>
            <tr>
                <td colspan="3" style="font-family: Arial, sans-serif; font-size:  xx-small; text-align: center;">
                    <br /><br /><br />
                    @Value.Legal
                </td>
            </tr>
        </tbody>
    </table>
</div>

@code
{
    [Parameter]
    public Models.Signature Value { get; set; }

    public async Task CopyToClipboardAsync()
    {
        await JS.InvokeAsync<bool>("CopyToClipboard", "signature");
    }
}