<table style="font-size: 11pt; font-family: Arial, sans-serif; color: black;" cellpadding="0" cellspacing="0" border="0">
    <tbody>
        <tr>
            <td width="200" style="width: 200px; vertical-align: top;" valign="top">
                <a href="https://igroove.be" target="_blank">
                    <img border="0" alt="Logo" width="180"
                         style="width: 180px; height:auto; border:0;" src="@Value.Logo">
                </a>
            </td>

            <td width="270" style="width: 270px; vertical-align: top; text-align: center;" valign="top" align="center">
                <table cellpadding="0" cellspacing="0" border="0" width="270">
                    <tr>
                        <td style="font-size:13pt;"><strong>@Value.FirstName @Value.LastName</strong></td>
                    </tr>
                    <tr>
                        <td style="font-size:10pt;">@Value.Title</td>
                    </tr>
                    <tr>
                        <td style="font-size:10pt;">&nbsp;</td>
                    </tr>
                    <tr>
                        <td style="font-size:10pt;">@Value.Phone</td>
                    </tr>
                    <tr>
                        <td style="font-size:10pt;">&nbsp;</td>
                    </tr>
                    <tr>
                        <td style="font-size:10pt;"><i>"@Value.Citation"</i></td>
                    </tr>
                </table>
            </td>

            <td width="130" style="width: 130px; vertical-align: top; text-align: center;" valign="top" align="center">
                <div style="font-size:13pt;"><strong>Follow us</strong></div>
                <div>&nbsp;</div>
                <table style="border: 0px;" cellpadding="0" cellspacing="0" border="0" align="center">
                    <tr>
                        <td>
                            <a href="https://linkedin.com" target="_blank" rel="noopener">
                                <img border="0" width="24" height="24" src="/images/linkedin.png"
                                     alt="linkedin icon" style="border:0px ; height:24px; width:24px;">
                            </a>
                        </td>
                        <td>&nbsp;</td>
                        <td>
                            <a href="https://facebook.com" target="_blank" rel="noopener">
                                <img border="0" width="24" height="24" src="/images/facebook.png"
                                     alt="facebook icon" style="border:0px ; height:24px; width:24px;">
                            </a>
                        </td>
                        <td>&nbsp;</td>
                        <td>
                            <a href="https://instagram.com" target="_blank" rel="noopener">
                                <img border="0" width="24" height="24" src="/images/instagram.png"
                                     alt="instagram icon" style="border:0px ; height:24px; width:24px;">
                            </a>
                        </td>
                    </tr>
                </table>
                <div>&nbsp;</div>
                <div><a href="https://igroove.be" target="_blank" rel="noopener" style="color: black;"> www.igroove.be</a></div>
            </td>

        </tr>
    </tbody>
</table>

@code
{
    [Parameter]
    public Models.Signature Value { get; set; }    
}